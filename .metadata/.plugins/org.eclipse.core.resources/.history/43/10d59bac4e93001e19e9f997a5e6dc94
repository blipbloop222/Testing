package test;
import java.util.*;

public class Test2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Enter 1 for Paper \n2 for Scissors \n3 for Rock: ");
		Scanner sc = new Scanner(System.in);
		Random random = new Random();
		
		int comp = 0, user = 0;
		
		while (comp != 3 || user != 3) {
			int compMove = random.nextInt(4);
			int userMove = sc.nextInt();
			
			if (userMove==1) {
				System.out.print("Player : Paper ----- ");
				if (compMove==1) {
					System.out.println("Computer : Paper");
				}
				else if (compMove==2) {
					System.out.println("Computer : Scissors");
				}
				else if (compMove==3) {
					System.out.println("Computer : Rock");
				}
			}
			else if (userMove==2) {
				System.out.print("Player : Scissors ----- ");
				if (compMove==1) {
					System.out.println("Computer : Paper");
				}
				else if (compMove==2) {
					System.out.println("Computer : Scissors");
				}
				else if (compMove==3) {
					System.out.println("Computer : Rock");
				}
			}
			else if (userMove==3) {
				System.out.print("Player : Rock ----- ");
				if (compMove==1) {
					System.out.println("Computer : Paper");
				}
				else if (compMove==2) {
					System.out.println("Computer : Scissors");
				}
				else if (compMove==3) {
					System.out.println("Computer : Rock");
				}
			}
			
			
			if (winCondition(compMove, userMove)) {
				comp++;
				System.out.println("Computer wins " + comp + " times");
				System.out.println("User wins " + user + " times");
			}
			else if (winCondition(userMove, compMove)) {
				user++;
				System.out.println("Computer wins " + comp + " times");
				System.out.println("User wins " + user + " times");
			}
		}
		if (comp==3) {
			System.out.println("Computer Wins!");
		}
		else if (user==3) {
			System.out.println("User wins!");
		}
	}
	
	//winning side = m, losing side = n
	public static boolean winCondition(int m, int n) {
		if (m==3 && n==2 || m==2 && n==1 || m==1 && n==3) {
			return true;
		}
		return false;
	}
}