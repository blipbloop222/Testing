package test;
import java.util.*;

public class Test2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println("Enter \n1 for Paper \n2 for Scissors \n3 for Rock ");
		Scanner sc = new Scanner(System.in);
		Random random = new Random();
		
		int comp = 0, user = 0;
		
		while (comp != 3 && user != 3) {
			int compMove = random.nextInt(1, 4);
			int userMove = sc.nextInt();

			//printing the moves of the player
			if (userMove==1) {
				System.out.print("Player: Paper ----- ");
			}
			else if (userMove==2) {
				System.out.print("Player: Scissors ----- ");
			}
			else if (userMove==3) {
				System.out.print("Player: Rock ----- ");
			}
			
			//printing the moves of the computer
			if (compMove==1) {
				System.out.println("Computer: Paper");
			}
			else if (compMove==2) {
				System.out.println("Computer: Scissors");
			}
			else if (compMove==3) {
				System.out.println("Computer: Rock");
			}
			
			
			if (compMove==userMove) {
				System.out.println("Computer wins " + comp + " times");
				System.out.println("User wins " + user + " times");
			}
			
			else if (winCondition(compMove, userMove)) {
				comp++;
				System.out.println("Computer wins " + comp + " times");
				System.out.println("User wins " + user + " times");
			}
			else if (winCondition(userMove, compMove)) {
				user++;
				System.out.println("Computer wins " + comp + " times");
				System.out.println("User wins " + user + " times");
			}
		}
		
		System.out.println((user==3 ? "User" : "Computer") + " Wins!");
	}
	
	//winning side = m, losing side = n
	public static boolean winCondition(int m, int n) {
		if (m==3 && n==2 || m==2 && n==1 || m==1 && n==3) {
			return true;
		}
		return false;
	}
}