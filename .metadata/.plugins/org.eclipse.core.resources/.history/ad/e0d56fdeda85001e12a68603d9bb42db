package youtube;
import java.util.*;

public class Me {

	public static void main(String[] args) {
//		 TODO Auto-generated method stub
		int[][] Arr = {{1, 5, 7}, 
					   {3, 6, 9}, 
					   {5, 3, 8}};
		
		//transpose the matrix
		for (int i=0; i<Arr.length; i++) {
			for (int j=0; j<=i; j++) {
				int hold = Arr[i][j];
				Arr[i][j]= Arr[j][i];
				Arr[j][i]= hold;
			}
		}
		
		//reverse each row
		for (int k=0; k<Arr.length; k++) {
			for (int l=Arr[k].length-1; l>=0; l--) {
				System.out.print(Arr[k][l] + " ");
			}
			System.out.println();
		}
	}
}

