	public static boolean isPentagonal(int Pn) {
		int PnCheck;
		for (int i=0; i<=Pn; i++) {
			PnCheck=i*(3*i-1) / 2;
			if (Pn==PnCheck) {
				return true;
			}
		}
		return false;
	}
}