package midsem;
import java.util.Scanner;
import java.util.Random;

public class Midsem {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print("Enter the number of staff: ");
		Scanner sc = new Scanner(System.in);
		int num = sc.nextInt();
		int count = 0;
		for (int i=0; i<num; i++) {
			Random rand = new Random();
			int ID = rand.nextInt(10000, 100000);
			System.out.println("Staff ID: " + ID);
		//	ID = (ID - (ID%10)) / 10;
		//	int ID1 = (ID/100);
			ID = ID/10;
			int ID1 = ID/100;
			
				if (((ID%10)%2)==0 && ((ID1%10)%2) !=0) {
					System.out.println("Weekend ON");
					count++;
				}
				else {
					System.out.println("Weekend OFF");
				}
				
			}
		System.out.println("The number of staff working on the weekend is " + count);	
		}

		
	}
